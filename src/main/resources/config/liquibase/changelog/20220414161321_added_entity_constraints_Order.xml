<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">
    <!--
        Added the constraints for entity Order.
    -->
    <changeSet id="20220414161321-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="deliverer_id"
                                 baseTableName="jhi_order"
                                 constraintName="fk_jhi_order__deliverer_id"
                                 referencedColumnNames="id"
                                 referencedTableName="deliverer"/>

        <addForeignKeyConstraint baseColumnNames="customer_id"
                                 baseTableName="jhi_order"
                                 constraintName="fk_jhi_order__customer_id"
                                 referencedColumnNames="id"
                                 referencedTableName="customer"/>

        <addForeignKeyConstraint baseColumnNames="restaurant_id"
                                 baseTableName="jhi_order"
                                 constraintName="fk_jhi_order__restaurant_id"
                                 referencedColumnNames="id"
                                 referencedTableName="restaurant"/>
    </changeSet>
</databaseChangeLog>
